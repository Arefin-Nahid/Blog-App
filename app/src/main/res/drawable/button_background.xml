<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#004080" /> <!-- Darker shade for pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#007FFF" /> <!-- Lighter shade to contrast with background -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

